# Grok API配置
XAI_API_KEY=your_grok_api_key_here
XAI_BASE_URL=https://api.x.ai/v1

# Web服务配置
WEB_PORT=5001                  # Web服务端口
WEB_HOST=0.0.0.0              # Web服务监听地址 (0.0.0.0 表示所有网卡)
WEB_DEBUG=False               # 调试模式 (生产环境请设为 False)

# 安全配置
SECRET_KEY=                    # Flask Session密钥 (留空自动生成)
WEB_PASSWORD_HASH=             # Web访问密码哈希 (使用 python set_password.py 生成)

# 上下文管理配置
MAX_CONTEXT_TOKENS=20000       # 最大上下文token数
CHAPTER_TARGET_LENGTH=3500    # 默认章节目标字数
